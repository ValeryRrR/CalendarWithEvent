<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/Theme.App.EditText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/image_button_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:padding="18dp"
            app:srcCompat="@drawable/ic_arrow_back" />

        <ImageButton
            android:id="@+id/imageButtonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:padding="18dp"
            app:srcCompat="@drawable/ic_ok" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:hint="@string/header"
        android:paddingTop="72dp"
        android:textColor="#fff"
        android:textSize="20sp">

        <requestFocus>

        </requestFocus>

    </EditText>

    <EditText
        android:id="@+id/et_main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:hint="@string/main_text"
        android:textColor="#fff"
        android:textSize="14sp">

    </EditText>

    <EditText
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:hint="@string/date"
        android:textColor="#fff"
        android:textSize="14sp">

    </EditText>

</LinearLayout>